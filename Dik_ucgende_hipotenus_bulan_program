import java.util.Scanner;
public class dik_ucgende_hipotenus_bulan_program {
    public static void main(String[] args) {

        /*
         Java ile kullanÄ±cÄ±dan dik kenarlarÄ±nÄ±n uzunluÄŸunu alan ve hipotenÃ¼sÃ¼ hesaplayan programÄ± yazÄ±n.

         ÃœÃ§ kenar uzunluÄŸunu kullanÄ±cÄ±dan aldÄ±ÄŸÄ±nÄ±z Ã¼Ã§genin alanÄ±nÄ± hesaplayan programÄ± yazÄ±nÄ±z.

         ÃœÃ§ğ‘”ğ‘’ğ‘›ğ‘–ğ‘› Ã§ğ‘’ğ‘£ğ‘Ÿğ‘’ğ‘ ğ‘– = 2ğ‘¢

         ğ‘¢ = (a+b+c) / 2

         Alan * Alan = ğ‘¢ * (ğ‘¢ âˆ’ ğ‘)* (ğ‘¢ âˆ’ ğ‘) * (ğ‘¢ âˆ’ ğ‘)
         */

        double kenar1;
        double kenar2;

        Scanner input = new Scanner(System.in);

        System.out.print("LÃ¼tfen bir kenar uzunluÄŸu giriniz:");
        kenar1 = input.nextDouble();

        System.out.print("LÃ¼tfen bir kenar uzunluÄŸu giriniz:");
        kenar2 = input.nextDouble();

        System.out.println("ÃœÃ§gen de hipotenÃ¼s uzunluÄŸu:" + Math.sqrt(((kenar1 * kenar1) + (kenar2 * kenar2))));
        double hipo = Math.sqrt(((kenar1 * kenar1) + (kenar2 * kenar2)));

        double u = (kenar2 + kenar1 + hipo) / 2;

        double alan = Math.sqrt(u*(u-kenar1)*(u-kenar2)*(u-hipo));
        System.out.println(alan);

    }
}
